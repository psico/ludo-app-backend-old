type Query {
    bookById(id: ID): Book
    userInfoById(id: String): UserInfo
    usersInfo: [UserInfo]
    matchByID(id: ID): Match
    matches: [Match]
}

type Mutation {
    createMatch(match: MatchInput): Match
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Friend {
    uid: ID
    name: String
}

input FriendInput {
    uid: ID
    name: String
}

type UserInfo {
    uid: ID
    name: String
    friends:[Friend!]!
}

type Match {
    uid: ID
    gameMoment: String
    players: [Friend!]
    game: Game
}

input MatchInput {
    docId: ID
    uid: ID
    gameMoment: String
    game: GameInput
    players: [FriendInput]
}

type Game {
    name: String
    objectId: String
    yearPublished: String
}

input GameInput {
    name: String
    objectId: String
    yearPublished: String
}
